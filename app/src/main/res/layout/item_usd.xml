<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/spacing_small"
    android:layout_marginBottom="@dimen/spacing_small"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/usd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 $ ="
            android:textSize="@dimen/spacing_max"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginBottom="@dimen/spacing_small"
            tools:ignore="RtlCompat,SpUsage" />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="74,2560"
            android:textStyle="bold"
            android:textSize="@dimen/spacing_max"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginBottom="@dimen/spacing_small"
            tools:ignore="RtlCompat,RtlHardcoded,SpUsage"
            android:layout_toRightOf="@+id/usd"/>

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22.03.2020"
            android:textSize="@dimen/spacing_normal"
            android:layout_marginEnd="24dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginBottom="@dimen/spacing_small"
            android:layout_alignParentEnd="true"
            tools:ignore="RtlCompat,SpUsage" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>