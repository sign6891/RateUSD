<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/spacing_small"
    android:layout_marginBottom="@dimen/spacing_small"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/usd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/spacing_max"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_centerVertical="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            tools:ignore="RtlCompat,SpUsage" />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_74_2560"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="@dimen/spacing_max"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_centerVertical="true"
            tools:ignore="RtlCompat,RtlHardcoded,SpUsage"
            android:layout_toRightOf="@+id/usd"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/icons_ruble_24"
            android:layout_marginStart="@dimen/spacing_micro"
            android:layout_centerVertical="true"
            tools:ignore="ContentDescription,RtlCompat,RtlHardcoded,SpUsage"
            android:layout_toRightOf="@+id/priceTextView"
            />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/spacing_normal"
            android:layout_marginEnd="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap,RtlCompat,SpUsage" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>